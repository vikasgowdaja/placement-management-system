package day2;

public class Pattern {
    public static void main(String[] args) {
        int n = 5; // Number of rows in the pattern

        for (int i = 1; i <= n; i++) {
            // Print asterisks
            for (int j = 1; j <= i; j++) {
                System.out.print("* ");
            }

            // Print numbers in increasing order
            for (int k = 1; k <= i; k++) {
                System.out.print(k + " ");
            }

            // Print remaining numbers in decreasing order
            

            System.out.println();
        }
    }
}








